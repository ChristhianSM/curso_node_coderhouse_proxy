{{#each messages}}
    <li class="flex justify-end">
        <div class="relative max-w-xl px-4 py-2 text-gray-700 rounded shadow">
            <p class="text-xs">{{this.author.user}}</p>
            <p class="block font-medium">
                {{this.message}}
                <span class="text-xs ml-3 font-light">{{this.timestamp}}</span>
            </p>
        </div>
    </li>
{{/each}}